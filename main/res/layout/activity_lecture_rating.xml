<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.hw.macs.nl148.iwatt.LectureRating"
    android:background="@drawable/backg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course Evaluation"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please submit feedback regarding the course you have just completed by rating each of the following questions.Your responses will be confidential and you will be kept anonymous . We do not collect information such as your name or any other identIfying information. "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="23dp" />

    <ListView
        android:id="@+id/form_list"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_above="@+id/rate_back"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@color/colorPrimary"
        android:id="@+id/rate_back"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:id="@+id/submit"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="40dp" />

    <Spinner
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_above="@+id/form_list"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />


</RelativeLayout>
