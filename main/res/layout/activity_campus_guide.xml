<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:id="@+id/content_campus_guide"
    tools:context="uk.ac.hw.macs.nl148.iwatt.CampusGuide">


    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/wifi"
        android:layout_marginBottom="15dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Campus Wifi Guide"
        android:backgroundTint="@color/colorPrimary"
        android:layout_above="@+id/study_spaces"
        android:layout_alignStart="@+id/study_spaces" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/study_spaces"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Study Spaces"
        android:backgroundTint="@color/colorPrimary"
        android:layout_above="@+id/resources"
        android:layout_alignStart="@+id/resources"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/resources"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Find Resources"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/workshops"
        android:layout_alignStart="@+id/study_support" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/study_support"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Study Support"
        android:backgroundTint="@color/colorPrimary"
        android:layout_above="@+id/wifi"
        android:layout_alignStart="@+id/workshops"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/workshops"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Power Hour Workshops"
        android:backgroundTint="@color/colorPrimary"
        android:layout_above="@+id/rate_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/rate_back"
        android:backgroundTint="@color/colorPrimary"
        android:text="Back"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

</RelativeLayout>
